<form theme="dark">
  <label>SH - 19 - GMC Job Automation - Dashboard - v1</label>
  <search id="sh_17_gmc_automation_dashboard_v1">
    <query>
| from lookup:splunk_rest_saved_searches_sh_kv_store_lookup
| fields shcluster_label Splunk_Instance app savedsearch_name savedsearch_search savedsearch_type description author disabled is_scheduled sharing cron_schedule realtime_schedule run_on_startup schedule_priority schedule_window updated allow_skew
| where is_scheduled=1 AND disabled=0
| search NOT app IN ("*global_monitoring_console", "splunk_instance_monitoring") NOT shcluster_label IN ("cm") NOT savedsearch_search="$search1$" NOT savedsearch_search="$search2$" NOT savedsearch_search="$search3$" NOT savedsearch_name="$savedsearch_name1$"
$custom_filter$
| `get_identity_info(author)`
| search shcluster_label="$shcluster_label$" AND app IN ( $app$ ) AND savedsearch_name IN ( $savedsearch_name$ )
| eval fudge_author = case (
    'sharing' == "user", 'author',
    'sharing' == "global", "nobody",
    'sharing' == "app", "nobody") 
| eval shcluster_label_rest=if(shcluster_label="libertymutual-shc", "libertymutual", shcluster_label . "-libertymutual")
| eval job_url="https://" . shcluster_label_rest . ".splunkcloud.com/app/" . app . "/search?s=" . savedsearch_name 
| eval encoded_title=savedsearch_name
| rex field=encoded_title mode=sed
    "s:%:%25:g s:\+:%2B:g s:\":%22:g s:\(:%28:g s:\):%29:g s: :%20:g  s:&lt;:%3C:g  s:&gt;:%3E:g  s:#:%23:g  s:{:%7B:g  s:}:%7D:g  s:\|:%7C:g s:\\\:%5C:g  s:\^:%5E:g  s:~:%7E:g
     s:\[:%5B:g  s:\]:%5D:g  s:\`:%60:g  s:;:%3B:g  s:/:%2F:g  s:\?:%3F:g  s/:/%3A/g  s:@:%40:g  s:=:%3D:g  s:&amp;:%26:g  s:\$:%24:g  s:\!:%21:g  s:\*:%2A:g" 
| eval rest_uri="https://" . shcluster_label_rest . ".splunkcloud.com:8089/servicesNS/" . fudge_author . "/" . app . "/saved/searches/" . encoded_title . "/" . "$job_property$"
    
</query>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="dropdown" token="shcluster_label" searchWhenChanged="false">
      <label>1. Splunk SH (Cluster/Instance)</label>
      <fieldForLabel>shcluster_label</fieldForLabel>
      <fieldForValue>shcluster_label</fieldForValue>
      <search base="sh_17_gmc_automation_dashboard_v1">
        <query>| stats count by shcluster_label</query>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="dropdown" token="sharing" searchWhenChanged="false">
      <label>2. App Sharing</label>
      <fieldForLabel>sharing</fieldForLabel>
      <fieldForValue>sharing</fieldForValue>
      <search base="sh_17_gmc_automation_dashboard_v1">
        <query>| stats count by sharing</query>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="dropdown" token="author" searchWhenChanged="false">
      <label>3. Author</label>
      <fieldForLabel>author</fieldForLabel>
      <fieldForValue>author</fieldForValue>
      <search base="sh_17_gmc_automation_dashboard_v1">
        <query>| stats count by author</query>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="multiselect" token="app">
      <label>4. App(s)</label>
      <choice value="*">ALL</choice>
      <fieldForLabel>app</fieldForLabel>
      <fieldForValue>app</fieldForValue>
      <search base="sh_17_gmc_automation_dashboard_v1">
        <query>| stats count by app</query>
      </search>
      <default>*</default>
      <delimiter> ,</delimiter>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
    </input>
    <input type="multiselect" token="savedsearch_name">
      <label>5. Reports/Alerts</label>
      <choice value="*">ALL</choice>
      <fieldForLabel>savedsearch_name</fieldForLabel>
      <fieldForValue>savedsearch_name</fieldForValue>
      <search base="sh_17_gmc_automation_dashboard_v1">
        <query>| stats count by savedsearch_name</query>
      </search>
      <default>*</default>
      <delimiter> ,</delimiter>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
    </input>
    <input type="dropdown" token="job_property">
      <label>6.1 Job Property</label>
      <choice value="disable">Disable Jobs</choice>
      <choice value="enable">Enable Jobs</choice>
      <choice value="allow_skew">Update Allow Skew</choice>
      <choice value="schedule_window">Update Schedule Window</choice>
      <choice value="schedule_priority">Update Schedule Priority</choice>
      <choice value="realtime_schedule">Update RealTime Schedule</choice>
      <choice value="cron_schedule">Update Cron Schedule</choice>
      <fieldForLabel>job_property</fieldForLabel>
      <fieldForValue>job_property</fieldForValue>
      <default>disable</default>
      <initialValue>disable</initialValue>
    </input>
    <input type="text" token="property_value">
      <label>6.2 Job Property Value</label>
      <default>1</default>
      <initialValue>1</initialValue>
    </input>
    <input type="text" token="search1" searchWhenChanged="true">
      <label>Search String (Does not contain)</label>
      <default>abc123</default>
      <initialValue>abc123</initialValue>
    </input>
    <input type="text" token="search2" searchWhenChanged="true">
      <label>Search String (Does not contain)</label>
      <default>abc123</default>
      <initialValue>abc123</initialValue>
    </input>
    <input type="text" token="search3" searchWhenChanged="true">
      <label>Search String (Does not contain)</label>
      <default>abc123</default>
      <initialValue>abc123</initialValue>
    </input>
    <input type="text" token="savedsearch_name1" searchWhenChanged="true">
      <label>Report/Alert Name (Does not contain)</label>
      <default>abc123</default>
      <initialValue>abc123</initialValue>
    </input>
    <input type="text" token="custom_filter" searchWhenChanged="true">
      <label>Custom Filter</label>
      <default>| where NOT match(savedsearch_name, "^(?:_ScheduledView)") AND NOT match(savedsearch_search, "(:?index\s*\"?=|_index`|index\sIN)|`") AND NOT match(savedsearch_search, "^\s*\|")</default>
      <initialValue>| where NOT match(savedsearch_name, "^(?:_ScheduledView)") AND NOT match(savedsearch_search, "(:?index\s*\"?=|_index`|index\sIN)|`") AND NOT match(savedsearch_search, "^\s*\|")</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>List of Scheduled Jobs</title>
      <table>
        <search base="sh_17_gmc_automation_dashboard_v1">
          <query>| eval actions=if(match(author, "admin|system"), "no-email", "email")
| table shcluster_label app fudge_author  savedsearch_name property property_value actions author emp_name first email savedsearch_search 
| eval property="disabled", property_value="1"</query>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">true</option>
        <option name="wrap">false</option>
        <format type="color" field="Job Name">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="Job App">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="savedsearch_search">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
      <single>
        <title>Total Number of Jobs</title>
        <search base="sh_17_gmc_automation_dashboard_v1">
          <query>| stats count</query>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="height">50</option>
        <option name="rangeColors">["0x53a051","0xf8be34"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Use this search to generate the REST URI</title>
      <table>
        <search base="sh_17_gmc_automation_dashboard_v1">
          <query>| eval actions=if(match(author, "admin|system"), "no-email", "email") 
| table savedsearch_name actions author emp_name first email job_url rest_uri</query>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">true</option>
        <option name="wrap">false</option>
        <format type="color" field="savedsearch_name">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
  </row>
</form>